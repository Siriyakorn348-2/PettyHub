<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user"
        >
    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_toEndOf="@id/user_profile_image_comment"
        android:layout_toStartOf="@+id/delete_comment"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brownn"
            >
        </TextView>

        <TextView
            android:id="@+id/comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment text"
            android:textSize="16sp"

 >

        </TextView>

    </LinearLayout>

</RelativeLayout>