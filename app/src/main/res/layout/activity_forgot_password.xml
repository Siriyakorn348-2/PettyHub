<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D7BBA8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/back" />

    <!-- Forgot Password Title (ย้ายจาก Toolbar มากลางหน้า) -->
    <TextView
        android:id="@+id/forgot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลืมรหัสผ่าน"
        android:textSize="28sp"
        android:textColor="#8D5522"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/forgot_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณากรอกอีเมลเพื่อรีเซ็ตรหัสผ่าน"
        android:textSize="18sp"
        android:textColor="#8D5522"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Email Input with Icon -->
    <EditText
        android:id="@+id/forgot_email"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:hint="อีเมล"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color8"
        android:padding="12dp"
        android:textColor="#8D5522"
        android:textColorHint="#B0A08D"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Reset Button -->
    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="ส่งอีเมลรีเซ็ต"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/color7"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>