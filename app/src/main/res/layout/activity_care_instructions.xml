<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_l"
            android:contentDescription="กลับ"
            android:padding="10dp"
            app:tint="@color/color7"
            />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลโรคและการดูแล"
            android:textSize="18sp"
            android:fontFamily="@font/newthaibold"
            android:textColor="#4A4A4A"
            android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>

    <!-- เนื้อหาหลัก (เลื่อนได้) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- รูปภาพโรค -->
            <ImageView
                android:id="@+id/diagnosisImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:contentDescription="รูปภาพประกอบโรค"
                android:background="@drawable/rounded_image_background"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                android:clipToOutline="true" />

            <!-- หัวข้อโรค -->
            <TextView
                android:id="@+id/diagnosisTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="โรค: "
                android:fontFamily="@font/newthaibold"
                android:textColor="@color/brow_light"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFE0B2"
            android:layout_marginVertical="12dp" />

            <!-- สาเหตุและอาการ -->
            <TextView
                android:id="@+id/symptomsAndCausesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="สาเหตุและอาการ"
                android:textSize="18sp"
                android:fontFamily="@font/newthaibold"
                android:textStyle="bold"
                android:textColor="#4A4A4A" />

            <TextView
                android:id="@+id/symptomsAndCausesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaimedium"
                android:text=""
                android:textSize="14sp"
            android:textColor="#6D6D6D"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFE0B2"
                android:layout_marginVertical="12dp" />

            <!-- คำแนะนำการดูแล -->
            <TextView
                android:id="@+id/careInstructionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="คำแนะนำการดูแล"
                android:fontFamily="@font/newthaibold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4A4A4A" />

            <TextView
                android:id="@+id/careInstructionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/thaimedium"
                android:text=""
                android:textSize="14sp"
                android:textColor="#6D6D6D"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFE0B2"
                android:layout_marginVertical="12dp" />

            <!-- เนื้อหาที่เกี่ยวข้อง -->
            <TextView
                android:id="@+id/relatedContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เนื้อหาที่เกี่ยวข้อง"
                android:textSize="18sp"
                android:fontFamily="@font/newthaibold"
                android:textStyle="bold"
                android:textColor="#4A4A4A" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/relatedContentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>