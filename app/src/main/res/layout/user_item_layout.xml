<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_rounded_corner"
    android:layout_margin="10dp"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/image_search_user"
    android:layout_width="69dp"
    android:layout_height="65dp"
    android:layout_marginStart="4dp"
    android:src="@drawable/dog"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/user_name_text_search"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:text="Username"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/image_search_user"
    app:layout_constraintStart_toEndOf="@id/image_search_user"
    app:layout_constraintTop_toTopOf="@id/image_search_user"
    app:layout_constraintEnd_toStartOf="@id/follow_search_btn"
    android:ellipsize="end"
    android:maxLines="1" />

<Button
    android:id="@+id/follow_search_btn"
    android:layout_width="95dp"
    android:layout_height="39dp"
    android:text="Follow"
    android:textSize="10dp"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="@id/image_search_user"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/image_search_user"
    android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>